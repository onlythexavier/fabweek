@using ISEN.DotNet.Library.Repositories.Interfaces
@{
    ViewBag.Title = "My Equipment";
    Layout = "_Layout";
    
}$
@model IEnumerable<ISEN.DotNet.Library.Models.Equipment>

<h2>@Model.FirstOrDefault().Owner.Display</h2>
<div class="row">
    <div class="col-md-12">
        <h3>Equipment : </h3>
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Type
                </th>
                <th>
                    Max Production
                </th>
                <th>
                    Action
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var equipment in Model)
            {
                <tr>
                    <td>@equipment.Id</td>
                    <td>@equipment.Type</td>
                    <td>@equipment.MaxProduction</td>
                    <td><a asp-controller="Equipment" asp-action="Detail" asp-route-id="@equipment.Id">Details</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>